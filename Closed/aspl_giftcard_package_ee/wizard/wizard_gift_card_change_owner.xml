<odoo>
    <record id="gift_card_change_owner_wizard_view" model="ir.ui.view">
        <field name="name">gift card change owner wizard</field>
        <field name="model">gift.card.change.owner.wizard</field>
        <field name="arch" type="xml">
            <form string="Use Gift Card">
                <sheet>
                    <group>
                        <group>
                            <field name="gift_card_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="new_partner_id" />
                        </group>
                        <group>
                            
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" type="object" string="apply" name="change_gift_card_owner"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_gift_card_change_owner_wizard" model="ir.actions.act_window">
            <field name="name">Use Gift Card</field>
            <field name="res_model">gift.card.change.owner.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            
    </record>
</odoo>