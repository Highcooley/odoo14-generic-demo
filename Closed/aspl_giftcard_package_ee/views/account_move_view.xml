<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_account_move_form_inh" model="ir.ui.view">
            <field name="name">View Account Move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_register_payment']" position="before">
                    <button name="action_register_gift_card_payment" id="gift_card_payment_btn" type="object" class="oe_highlight" string=" Confirm Gift Card" attrs="{'invisible': ['|',('is_paid_gift_card', '!=', True), ('payment_state', '!=', 'partial')]}"/>
                </xpath>
                <xpath expr="//field[@name='qr_code_method']" position="after">
                    <field name="new_gift_card_id" invisible="1"/>
                    <field name="is_paid_gift_card" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
