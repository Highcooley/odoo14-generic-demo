<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="giftCardChangeOwnerPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup">
                    <header class="title drag-handle">
                        <t t-esc="props.title"/>
                    </header>
                    <div class="giftcard-extend-popup">
                        <div>Card No :</div>
                        <div>
                            <t t-esc="props.selectedCard.card_no"/>
                        </div>
                    </div>
                    <div class="giftcard-extend-popup">
                        <div>Expire Date :</div>
                        <div>
                            <t t-esc="props.selectedCard.expire_date"/>
                        </div>
                    </div>
                    <div class="giftcard-extend-popup">
                        <div>Customer :</div>
                        <div>
                             <t t-esc="props.selectedCard.customer_id[1]"/>
                        </div>
                    </div>
                    <div class="giftcard-extend-popup">
                        <div>New Owner :</div>
                        <div>
                            <input type="text" t-model="state.SelectCustomer" t-ref="select_customer" placeholder="Select Customer" id="select_customer" name="points" list="searchPartnerList"/>

                            <datalist id="searchPartnerList">
                                <option t-foreach="env.pos.db.get_partners_sorted()"
                                        t-as="value" t-att-value="value.name"
                                        t-att-id="value.id">
                                    <t t-esc="value.name"/>
                                </option>
                            </datalist>
                        </div>
                    </div>
                    <footer class="footer">
                        <div class="button confirm" t-on-click="confirm">
                            <t t-esc="props.confirmText"/>
                        </div>
                        <div class="button cancel" t-on-click="cancel">
                            <t t-esc="props.cancelText"/>
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
